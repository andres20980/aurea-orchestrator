# Example environment configuration for Aurea Orchestrator
# Copy this file to .env and customize as needed

# Cost Limits
MAX_JOB_COST=10.0

# Rate Limiting
DEFAULT_RPM=60
DEFAULT_TPM=100000

# Retry Configuration
MAX_RETRIES=3
RETRY_BASE_DELAY=1.0
RETRY_MAX_DELAY=60.0

# Circuit Breaker
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60.0

# Model Allow/Deny Lists
# ALLOWED_MODELS=gpt-4,gpt-3.5-turbo,claude-3-sonnet
# DENIED_MODELS=unsafe-model

# Logging
LOG_LEVEL=INFO
REDACT_PII=true
