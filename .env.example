# Aurea Orchestrator - Notification Layer Configuration

# Flask Configuration
FLASK_ENV=development
FLASK_APP=app.py
PORT=5000

# Notification Configuration File Path
NOTIFICATION_CONFIG_PATH=config/notifications.json

# Email Configuration (Optional - for email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@aurea-orchestrator.com
SMTP_USE_TLS=true

# Default notification settings
DEFAULT_NOTIFICATION_ENABLED=true
